nm1=$1
calculo=$2
nm2=$3

if [ $2 = + ] ; then
	
	let resultado=nm1+nm2
	echo $resultado
fi

if [ $2 = '-' ] ; then
	
	let resultado=nm1-nm2
	echo $resultado
fi

if [ $2 = x ]; then
	
	let resultado=nm1*nm2
	echo $resultado
fi

if [ $2 = '/' ]; then
	
	if [ $3 -eq 0 ]; then
	echo "ERRO: divis√£o por zero."
	
	else 

	let resultado=nm1/nm2
	echo $resultado
	
	fi
fi
