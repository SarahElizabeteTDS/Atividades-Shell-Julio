op=0

	while [ $op -ne 4 ]
	do
		echo "1 – Exibir o status da utilização das partições do sistema"
		echo "2 – Exibir a relação de usuários logado"
		echo "3 – Exibir a data e hora do sistema"
		echo "4 – Sair "
		echo -n "Informe a opção: "
		read op
		 case $op in
			1) df -h ;;
			2) who -u ;;
			3) date ;;
			4) ;;
			*) echo "Opcao invalida";;
		 esac
	done
